<!--pages/book-detail/book-detail.wxml-->
<wxs src="../../until/filter.wxs" module="util" />
<view class="container">
  <view class="head">
    <image src="{{book.image}}"></image>
    <text class="title">{{book.title}}</text>
    <text class="author">{{book.author}}</text>
  </view>
  <view class="sub-container">
    <text class="headLine">短评</text>
    <view class="v-container">
      <block wx:for="{{util.limit(comments,5)}}" wx:key='item'>
        <v-tag text="{{item.content}}">
          <text class="num" slot="after">{{'+' +item.nums}}</text>
        </v-tag>
      </block>
    </view>
  </view>
  <view class="sub-container">
    <text class="headLine">内容简介</text>
    <text class="content" decode="true">{{util.format(book.summary)}}</text>
  </view>
  <view class="sub-container">
    <text class="headline">书本信息</text>
    <view class="detail-container">
      <view class="vertical description">
        <text>出版社</text>
        <text>出版年</text>
        <text>页数</text>
        <text>定价</text>
        <text>装帧</text>
      </view>
      <view class="vertical">
        <text>{{book.publisher}}</text>
        <text>{{book.pubdate}}</text>
        <text>{{book.pages}}</text>
        <text>{{book.price}}</text>
        <text>{{book.binding}}</text>
      </view>
    </view>
  </view>
</view>
<view class="post-container" wx:if="{{!posting}}">
  <view class="post-fake"  bind:tap='onFake'>
    <text>输入短评</text>
  </view>
  <view class="like-container">
    <v-like bind:like="onLike" class="like" liek="{{likeStatus}}" count="{{likeCount}}">
    </v-like>
  </view>
</view>
<view class="posting-container"  wx:if="{{posting}}">
  <view class="post-header">
    <text>仅可点击标签+1</text>
    <text class="cancel" bind:tap="onCancel">取消</text>
  </view>
  <view class="comment-container">
    <view class="v-container">
      <block wx:for="{{util.limit(comments,3)}}" wx:key='item'>
        <v-tag bind:tapping="onPost" text="{{item.content}}">
          <text class="num" slot="after">{{'+' +item.nums}}</text>
        </v-tag>
      </block>
    </view>
  </view>
  <input class="post" placeholder="短评最多12个字" bindconfirm="onPost"></input>
</view>
<v-mask wx:if="{{posting}}"></v-mask>